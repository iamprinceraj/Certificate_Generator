<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title> CerT5 U | RIMT University</title>
  <link rel="stylesheet" href="styles.css" />
  <link rel="shortcut icon" href="images/nav-logo.svg" type="image/x-icon">
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
  <script src="https://kit.fontawesome.com/836d66d8f7.js" crossorigin="anonymous"></script>

</head>

<body>
  <div id="page-container">

    <!-- {{! Login Page }} -->

    <div id="loader">
      <!-- <img src="loader.gif" alt="Loader"> -->
      <p>Loading....</p>
    </div>

    <div id="login-Wrapper" class="tab">

      <!-- <img class="bgImg" src="images/bgimg.png" alt="" /> -->
      <div class="typewritter">
        <img src="images/landingPage.png" alt="" width="400px">
        Welcome <span class="role"></span>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
      <script src="https://kit.fontawesome.com/58a810656e.js" crossorigin="anonymous"></script>
      <script>
        var typeData = new Typed(".role", {
          strings: [
            "To RIMT CertifyU",
            "",

          ],
          loop: true,
          typeSpeed: 100,
          backSpeed: 80,
          backDelay: 1000,
        });
      </script>
      <div class="login-container">
        <h2>Hello Again!</h2>
        <div class="login-nav">
          <img src="images/apprentice.png" alt="">
          <p>RIMT CertifyU </p>
        </div>
        <form class="form-field" id="loginForm" action="/">
          <input type="text" name="username" id="username" placeholder="Username" required />
          <p id="usernameError" class="error-message" style="display: none;">Username does not exist.</p> 
          <div class="password-container">
            <input type="password" name="password" id="password" placeholder="Password" required />
            <i class="fa-regular fa-eye-slash"></i>
          </div>
          <p id="passwordError" class="error-message" style="display: none;">Incorrect password.</p>
          <div id="serverError" class="error-container" style="display: none;">Internal server error. Please try again later.</div>
          <button type="submit" id="login-btn"> Login</button>
        </form>
      </div>

    </div>


    <!-- Nav Bar -->

    <nav class="nav">
      <div class="nav-logo">
        <img src="images/apprentice.png" alt="">
        <p>RIMT CertifyU </p>
      </div>
      <div class="nav-menu" id="navMenu">
        <span class="generate-certificate setActive">Generate Certificate</span>
        <span class="add-student">Add Student</span>
      </div>
    </nav>

    <!-- {{! Generate certificate Page }} -->

    <div class="wrapper1" id="wrapper1">


      <div class="student-addData-container ">
        <div class="generation-form">
          <form class="st-data" id="searchStudentForm" action="/searchStudent">

            <div class="top">
              <header>Enter Registration Number</header>
            </div>

            <div class="input-container">
              <input type="text" class="input-field-styles" placeholder="Enter registration no." value=""
                id="registration-input" name="registrationNo" required />
              <i class="bx bx-user"></i>
            </div>

            <p id="registrationError" class="error-message" style="display: none; margin-bottom:10px;">Student with this registration number does not exist.</p>
            <div id="serverError" class="error-container" style="display: none;">Internal server error. Please try again later.</div>

            <div class="input-box">
              <button type="submit" class="search-Student" id="search-Student">Search Student</button>
            </div>

          </form>
        </div>

        <!-- {{! <iframe src="" id="mypdf" frameborder="0" style="width:45vw ; height:80vh;"></iframe> }} -->

        <div class="student-info" id="student-info">
          <div class="top">
            <div class="details">
              <p class="input-field-styles info">Name : <span id="studentName"></span></p>
              <p class="input-field-styles info">Roll No. : <span id="studentRollNo"></span></p>
              <p class="input-field-styles info">Registration No. : <span id="studentRegistrationNo"></span></p>
              <p class="input-field-styles info">Course :<span id="studentCourse"></span> </p>
              <p class="input-field-styles info">Branch : <span id="studentBranch"></span> </p>
              <p class="input-field-styles info">Year of Admission : <span id="studentYearOfAdmission"></span> </p>
              <p class="input-field-styles info">Year of Graduation : <span id="studentYearOfGraduation"></span> </p>
              {{!-- <p class="input-field-styles info">Status : pending</p> --}}

              <div class="input-box">
                <button id="certificate" type="submit" class="generate-btn" value="Generate Certificate"
                  name="generateCertificate">Generate Certificate</button>
              </div>
            </div>
          </div>
        </div>

        {{!-- extra dowmload work --}}
        <div class="confirmDownload">
          <div class="download-container">
            <i class="bx bx-message-alt-x" title="click to cancel"></i>
            <p class="top">Want to Download the Certificate? Click below</p>
            <div class="download-button"><button class="submit"><a href="">Download</a></button></div>
          </div>
          <div class="success-container" style="display:none;">Certificate Generated successfully <img src="images/checkmark-transparent.gif" alt="check mark" height="32"></div>
        </div>

      </div>
    </div>

    <!-- {{! Details Page }} -->

    <div class="wrapper2">

      <div class="form-box  add-student-data">

        <form class="details-container tab" id="addStudentForm"  action="/addStudent">
          <div class="top">
            <header>Enter Student Details</header>
          </div>
          <div class="input-box">
            <input type="text" class="input-field" placeholder="Name" name="Name" required/>
            <i class="bx bx-user"></i>
          </div>
          <div class="input-box half-input-field">
            <input type="text" class="input-field" placeholder="Roll no." id="rollNo" name="rollNo" required/>
            <i class="bx bx-shield"></i>
          </div>
          <p id="rollNoError" class="error-message" style="display: none; margin-bottom:10px;">Roll No. already exists</p>

          <div class="input-box half-input-field">
            <input type="text" class="input-field" placeholder="Registration no." id="registrationNo" name="registrationNo" required/>
            <i class="bx bx-registered"></i>
          </div>
          <p id="registrationNoError" class="error-message" style="display: none; margin-bottom:10px;">Registration No. already exists</p>

          <div class="input-box">
            <input type="text" class="input-field" placeholder="Course" name="course" required/>
            <i class="bx bx-book-open"></i>
          </div>
          <div class="input-box">
            <input type="text" class="input-field" placeholder="Branch" name="branch" required/>
            <i class="bx bx-git-repo-forked"></i>
          </div>
          <div class="input-box">
            <input type="text" class="input-field" placeholder="Year of admission" name="YearOfAdmission" required />
            <i class="bx bx-calendar"></i>
          </div>
          <div class="input-box">
            <input type="text" class="input-field" placeholder="Year of Graduation" name="YearOfGraduation" required/>
            <i class="bx bx-calendar"></i>
          </div>
          <div class="input-box">
            <button type="submit" class="submit" value="Add Student">Add Student</button>
          </div>
          
          <div id="successMessage" class="success-container" style="display:none;">Student Added successfully <img src="images/checkmark-transparent.gif" alt="check mark" height="32"></div>
          <div id="serverError" class="error-container" style="display: none;">Internal server error. Please try again later.</div>

        </form>
      </div>
    </div>

  </div>

  <script src="https://unpkg.com/pdf-lib/dist/pdf-lib.min.js"></script>
  <script src="script.js"></script>
</body>

</html>